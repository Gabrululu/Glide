# GLIDE - Environment Variables Template

# Copy this file to .env.local and fill in your values

# ============================================
# PRIVY CONFIGURATION (REQUIRED)
# ============================================
# Get your App ID from: https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# ============================================
# ARC BLOCKCHAIN (Optional - using mock mode)
# ============================================
NEXT_PUBLIC_ARC_RPC_URL=https://rpc.arc.network
NEXT_PUBLIC_ARC_CHAIN_ID=1234

# ============================================
# GLIDE SDK CONFIGURATION
# ============================================
NEXT_PUBLIC_GLIDE_TRIAL_DAYS=7
NEXT_PUBLIC_GLIDE_TRIAL_AMOUNT=0.1
