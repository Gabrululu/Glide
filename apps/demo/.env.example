# ============================================
# TOKENS (Base Sepolia)
# ============================================
# Wrapped ETH
NEXT_PUBLIC_WETH=0x4200000000000000000000000000000000000006

# Mock USDC (if Circle doesn't have testnet USDC, we'll deploy our own)
NEXT_PUBLIC_USDC=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# ============================================
# FAUCET CONFIGURATION
# ============================================
# Auto-faucet for new users (in ETH)
NEXT_PUBLIC_AUTO_FAUCET_AMOUNT=0.01

# Trial USDC amount for new users
NEXT_PUBLIC_TRIAL_AMOUNT=100

# Trial duration in days
NEXT_PUBLIC_TRIAL_DAYS=7

# ============================================
# OPTIONAL: WALLET CONNECT (for external wallets)
# ============================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ============================================
# DEVELOPMENT
# ============================================
NEXT_PUBLIC_ENABLE_TESTNETS=true
NEXT_PUBLIC_DEBUG_MODE=true
